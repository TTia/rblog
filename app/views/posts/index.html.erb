<div class='posts'>
  <% if notice %>
      <p id="notice" xmlns=""><%= notice %></p>
  <% end %>
  <div id='new_post_action' class="post">
    <p class='post_title'>
      <%= new_post_image_link %>
      </br>
      <%= link_to 'Crea un nuovo post!', new_post_path, class: 'new_post_link' %>
    </p>

  </div>

  <% @posts.each do |post| %>
      <div class='post'>
        <p class='post_title'>
          <%= link_to post.title, post %>
        </p>

        <p class='post_detail'>
          <% post_details(post).each do |detail| %>
            <%= detail %>
          <% end %>
        </p>

        <p class='post_content'>
          <%= post.body %>
        </p>

        <div class='post_actions'>
          <%= edit_post_image_link post %>
          <%= remove_post_image_link post %>
        </div>
      </div>
  <% end %>
</div>